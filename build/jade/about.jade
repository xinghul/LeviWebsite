.row
    .col-md-6.col-xs-12
        .row(class="intro-block")
            .col-md-12
                .row
                    .col-md-5
                        img(src="/images/levi.jpg", id="me", class="img-thumbnail")
                    .col-md-7
                        p 
                            | I'm Levi Lu, a full-stack web developer.
                        p
                            i(class="fa fa-lg fa-fw fa-check text-success")
                            | #{' '}
                            | Bachelor's degree of CS @ Tsinghua University
                        p
                            i(class="fa fa-lg fa-fw fa-refresh fa-spin text-warning")
                            | #{' '}
                            | Pursuing MET @ Carnegie Mellon University
                        p  
                            | I built this website from scratch, using 
                            a(href="http://meanjs.org/") MEAN stack
                            | . 
        .row
            div(class="social-buttons")
                div(ng-repeat="icon in socialIcons")
                    .col-md-4.col-xs-6
                        section(id="{{icon.name}}")
                            div(class="button")
                                a(class="btn", href="{{icon.href}}", target="_blank")
                                    span(class="icon fa", ng-class="'fa-' + icon.name")
                                    span(class="label") {{icon.label}}
                            div(class="cover")
                                div(class="innie")
                                    i(class="fa fa-lg", ng-class="'fa-' + icon.name")
                                div(class="spine")
                                div(class="outie")
                                    i(class="fa fa-lg", ng-class="'fa-' + icon.name")
                            div(class="shadow")
    .col-md-6.col-xs-12
        .row(class="skill-block")
            .col-md-12
                div(class="panel panel-warning")
                    div(class="panel-heading") WEB
                    div(class="panel-body")
                        div(class="skillbar", data-percent="63%")
                            div(class="title", style="background: rgb(227, 82, 48);")
                                span HTML5
                            div(class="bar", style="background: rgb(239, 103, 55);")
                        div(class="skillbar", data-percent="65%")
                            div(class="title", style="background: rgb(24, 116, 182);")
                                span CSS3
                            div(class="bar", style="background: rgb(56, 170, 218);")
                        div(class="skillbar", data-percent="70%")
                            div(class="title", style="background: rgb(227, 161, 56);")
                                span JavaScript
                            div(class="bar", style="background: rgb(240, 190, 58);")
                        div(class="skillbar", data-percent="50%")
                            div(class="title", style="background: rgb(184, 44, 55);")
                                span AngularJS
                            div(class="bar", style="background: rgb(228, 47, 61);")
                        div(class="skillbar", data-percent="45%")
                            div(class="title", style="background: rgb(29, 140, 147);")
                                span D3JS
                            div(class="bar", style="background: rgb(45, 214, 224);")
                div(class="panel panel-warning")
                    div(class="panel-heading") DATABASE
                    div(class="panel-body")
                        div(class="skillbar", data-percent="65%")
                            div(class="title", style="background: rgb(0, 143, 63);")
                                span MongoDB
                            div(class="bar", style="background: rgb(54, 164, 64);")
                        div(class="skillbar", data-percent="55%")
                            div(class="title", style="background: rgb(35, 108, 125);")
                                span Neo4j
                            div(class="bar", style="background: rgb(80, 159, 178);")
                        div(class="skillbar", data-percent="30%")
                            div(class="title", style="background: rgb(232, 123, 0);")
                                span MySQL
                            div(class="bar", style="background: rgb(237, 167, 88);")

    